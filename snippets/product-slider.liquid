        <div class="next_prev-groups">
            {% render 'breadcrumb' %}
            {% render 'next-prev-product' %} 	
        </div>

        {% else %}
        {% render 'breadcrumb' %}
        {% endif %}
    </div>       
    <div class="halo-product-content">
        <div class="pro-page">
            {% section 'product-template-slider' %}
